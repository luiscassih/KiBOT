html
    head
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="lib/bootstrap/css/bootstrap.min.css")
        link(rel="stylesheet", href="css/index.css")
        link(rel="stylesheet", href="css/progress-circle.css")
        script(src="lib/jquery-3.2.1.min.js",onload="window.$ = window.jQuery = module.exports;")
        script(src="lib/popper-1.12.9.min.js")
        script(src="lib/bootstrap/js/bootstrap.min.js")
        script(src="js/index.js")
    body.bg-dark
        nav.navbar.navbar-expand-sm.bg-dark.navbar-dark
            a(href="#").navbar-brand="KiBOT" 
                small.text-muted#appVersion=" ver 1.0.0"
        .main-container.scroll-wrapper
            .container-fluid
                .row.justify-content-md-center
                    .col-md-8
                        .row
                            .col-md-3.text-center
                                .btn-group-vertical#statusBtnGroup
                                    button.btn.btn-success.btn-block#statusBtnStart="RUN"
                                    button.btn.btn-danger.btn-block#statusBtnStop(disabled)="STOP"
                            .col-md-9
                                .card.is-idle
                                    .card-body
                                        .row.align-items-center.text-center
                                            .col
                                                h3="Set the amount of time"
                                        .row.align-items-center.text-center
                                            .col
                                                .btn-group.btn-group-toggle#minutesInput(data-toggle="buttons")
                                                    label.btn.btn-outline-primary="30 min"
                                                        input(type="radio", name="minutesToSet", value="30")
                                                    label.btn.btn-outline-primary="60 min"
                                                        input(type="radio", name="minutesToSet", value="60")
                                                    label.btn.btn-outline-primary.active="infinite"
                                                        input(type="radio", name="minutesToSet", value="-1", checked)
                                                    button.btn.btn-outline-primary="custom"
                                                        input(type="radio", name="minutesToSet", value="0")
                                        .row#customMinutesInputContainer
                                            .col
                                                .row
                                                    .col-sm-3
                                                    .col-sm-6
                                                        .input-group(style="margin-top:15px;")
                                                            input.form-control#customMinutesInput(placeholder="Add custom time")
                                                            .input-group-append
                                                                //- button.btn.btn-outline-primary="Add"
                                                                select.btn.btn-outline-primary.custom-select
                                                                    option(value="m", selected)="Minutes"
                                                                    option(value="h")="Hours"
                                                        
                                .card.is-running
                                    .card-body
                                        .row.align-items-center.text-center
                                            .col
                                                .pie-wrapper.progress-70#circleProgressPercent
                                                    span.label#circleMinutesLeftValue="0"
                                                    .pie
                                                        .left-side.half-circle
                                                        .right-side.half-circle
                                            .col
                                                h1="Minutes Left"
                .row.justify-content-md-center.align-items-center
                    .col-md-8
                        button.btn.btn-block.btn-primary(data-toggle="collapse", data-target="#advancedOptionsCollapse")="Advanced options"
                .row.justify-content-md-center
                    .col-xl-8
                        .collapse#advancedOptionsCollapse
                            .row
                                .col-md-4
                                    .row
                                        .col-xl-12
                                            ul.list-group
                                                li.list-group-item.active.text-center="Enable window autoclick"
                                                li.list-group-item.text-center
                                                    .btn-group.btn-group-toggle(data-toggle="buttons")
                                                        label.btn.btn-outline-primary.active="enabled"
                                                            input#enabledAltTab(type="radio", name="enableAutoClick", checked)
                                                        label.btn.btn-outline-primary="disabled"
                                                            input#enabledAlt(type="radio", name="enableAutoClick")
                                    .row
                                        .col-xl-12
                                            ul.list-group
                                                li.list-group-item.active.text-center="Key to Press"
                                                li.list-group-item
                                                    select.btn.btn-primary#keyToPress
                                                        option(value="control", selected)="Control"
                                                        option(value="command")="Command (OSX)"
                                                        option(value="alt")="Alt"
                                                        option(value="custom")="Custom String"
                                                    input.form-control.text-center#stringToPress(value="customString")
                                .col-md-8
                                    ul.list-group#customTitlesContainer
                                        li.list-group-item.active.text-center="Customize Window Title"
                                        li.list-group-item
                                            .input-group
                                                input.form-control#customTitleToList(placeholder="Add custom process title")
                                                .input-group-append
                                                    button.btn.btn-outline-primary#addCustomTitleToList="Add"
                                        li.list-group-item#customTitles
                                            .row.eachTitleContainer
                                                .col.eachTitle="Title"
                                                .col
                                                    button.btn.btn-danger.customTitleRemove="REMOVE"